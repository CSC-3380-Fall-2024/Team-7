@rendermode InteractiveServer
@page "/activities"

<div class="container mt-4">
    <h1 class="text-center mb-4">Discover Our Activities</h1>

    <BBTabs DefaultTab="Outdoor">
        @foreach (var category in Activities)
        {
            <BBTab Key="@category.Category" Title="@category.Category">
                <div class="row">
                    @foreach (var activity in category.Items)
                    {
                        <div class="col-md-4 mb-4">
                            <BBCard>
                                <BBCardHeader>
                                    <h5 class="card-title">@activity.Name</h5>
                                </BBCardHeader>
                                <BBCardBody>
                                    <img src="@activity.Image" alt="@activity.Name" class="img-fluid rounded mb-3" />
                                    <p class="card-text">@activity.Description</p>
                                </BBCardBody>
                                <BBCardFooter>
                                    <BBButton Class="btn btn-primary w-100">Book Now</BBButton>
                                </BBCardFooter>
                            </BBCard>
                        </div>
                    }
                </div>
            </BBTab>
        }
    </BBTabs>
</div>

@code {
    public class ActivityCategory
    {
        public string Category { get; set; }
        public List<ActivityItem> Items { get; set; }
    }

    public class ActivityItem
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public string Image { get; set; }
    }

    private List<ActivityCategory> Activities = new List<ActivityCategory>
    {
        new ActivityCategory
        {
            Category = "Outdoor",
            Items = new List<ActivityItem>
            {
                new ActivityItem { Name = "Hiking Trail Adventure", Description = "Explore scenic mountain trails with experienced guides.", Image = "/placeholder.svg?height=200&width=300" },
                new ActivityItem { Name = "Beach Yoga Sessions", Description = "Start your day with relaxing yoga classes by the ocean.", Image = "/placeholder.svg?height=200&width=300" },
                new ActivityItem { Name = "Kayaking Excursion", Description = "Paddle through crystal-clear waters and hidden coves.", Image = "/placeholder.svg?height=200&width=300" },
            }
        }
    };
}
