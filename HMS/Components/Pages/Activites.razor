@page "/activities"
@rendermode InteractiveServer

<PageTitle>Activities</PageTitle>

<div class="container mt-5">
    <h1 class="text-center mb-4">Activities</h1>
    <p class="lead text-center">Discover a variety of exciting activities you can enjoy during your stay with us. Whether you prefer to relax by the pool, pamper yourself at our spa, or try your luck at the casino, we have something for everyone.</p>
    <hr>
    
    <!-- Navigation Links -->
    <nav class="nav nav-pills nav-justified mb-4">
        <a class="nav-link" href="#entertainment">Entertainment</a>
        <a class="nav-link" href="#dining">Dining</a>
        <a class="nav-link" href="#pools">Pools</a>
        <a class="nav-link" href="#casino">Casino</a>
        <a class="nav-link" href="#spa-salon">Spa & Salon</a>
        <a class="nav-link" href="#nightlife">Nightlife</a>
    </nav>
    
    <!-- Entertainment Section -->
    <div id="entertainment" class="mb-5">
        <h2>Entertainment</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500" class="img-fluid mb-3" alt="Entertainment">
            </div>
            <div class="col-md-6">
                <p>Enjoy live entertainment at our hotel, featuring talented performers, musicians, and comedians. Our entertainment program is curated to provide a variety of experiences for all ages, making your evenings truly unforgettable.</p>
            </div>
        </div>
        <!-- Carousel Dropdown -->
        
    </div>

    <!-- Other sections follow the same format as Entertainment -->

</div>

@code {
    private bool showEntertainmentCarousel = false;

    private void ToggleEntertainmentCarousel()
    {
        showEntertainmentCarousel = !showEntertainmentCarousel;
    }
}
