@rendermode InteractiveServer
@page "/activities"

<div class="container mt-4">
    <h1 class="text-center mb-4">Discover Our Activities</h1>

    <BBTabs DefaultTab="Outdoor">
        @foreach (var category in Activities)
        {
            <BBTab Key="@category.Category" Title="@category.Category">
                <div class="row">
                    @foreach (var activity in category.Items)
                    {
                        <div class="col-md-4 mb-4">
                            <BBCard>
                                <BBCardHeader>
                                    <h5 class="card-title">@activity.Name</h5>
                                </BBCardHeader>
                                <BBCardBody>
                                    <img src="@activity.Image" alt="@activity.Name" class="custom-image img-fluid rounded mb-3" />
                                    <p class="card-text">@activity.Description</p>
                                </BBCardBody>
                                <BBCardFooter>
                                    <BBButton Class="btn btn-primary w-100">Book Now</BBButton>
                                </BBCardFooter>
                            </BBCard>
                        </div>
                    }
                </div>
            </BBTab>
        }
    </BBTabs>
</div>

<style>
    .custom-image {
        width: 422.4px;
        height: 281.52px;
        object-fit: cover; /* Ensures the image scales and crops to fill the dimensions */
    }
</style>


