@page "/basic-dropdown"

<h3>Basic Dropdown Menu</h3>

<div class="dropdown-container">
    <button @onclick="ToggleDropdown" class="dropdown-button">Dropdown</button>

    @if (isOpen)
    {
        <div class="dropdown-menu">
            <button class="dropdown-item" @onclick="@(() => OnSelectItem("Item 1"))">Item 1</button>
            <button class="dropdown-item" @onclick="@(() => OnSelectItem("Item 2"))">Item 2</button>
            <button class="dropdown-item" @onclick="@(() => OnSelectItem("Item 3"))">Item 3</button>
        </div>
    }
</div>

@code {
    private bool isOpen = false;

    private void ToggleDropdown()
    {
        isOpen = !isOpen;
        Console.WriteLine($"Dropdown is {(isOpen ? "open" : "closed")}");
    }

    private void OnSelectItem(string item)
    {
        isOpen = false;
        Console.WriteLine($"Selected: {item}");
    }
}
