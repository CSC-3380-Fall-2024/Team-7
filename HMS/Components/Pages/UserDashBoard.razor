@page "/userDashBoard"
@using Google.Cloud.Firestore

<PageTitle>My Account</PageTitle>
<body>
    <div class="page-header"> @*navbar specific to user dashboard, need to figure out how to align with nav bar to look seemless*@
        <h1>My Account</h1>
        <div class="action-items">
            <ul>
                <li>My Trips</li>
                <li>Reward and Wallet</li>
                <li>Profile</li>
            </ul>
        </div>
    </div>

    <div class="userInfo">
        <h2>Hi, User</h2>
        <p>Member #</p>
    </div>

    <div class="user-section">
        <h3>Upcoming Trips</h3>
        <h3 class="trip-number">You have @*pull from user bookings*@ upcoming trips</h3>
        <div class="img-header"></div>
    </div>

    <div class="user-section">
        <h2>Member Rewards</h2>
        <p>Earn qualifiying points or nights to unlock more tier benefits</p>
        <div class="tier-progress">
            <div class="progress-bar" style="width: @progressPercentage%;"></div>
            <div class="tier-line" style="left: 10%;"></div>  
            <div class="tier-line" style="left: 20%;"></div>  
            <div class="tier-line" style="left: 40%;"></div> 
            <div class="tier-line" style="left: 60%;"></div> 
            <div class="tier-line" style="left: 80%;"></div>  
            <div class="tier-line" style="left: 100%;"></div>  
        </div>
    </div>
</body>

<style>
html, body {
    margin: 0;
    padding 0;
}

.page-header {
    background: linear-gradient(180deg, #2969BF 0%, #144E9D 100%);
    color: #FFFFFF;
    width: 100%; 
    margin-top: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.action-item {
    margin-left: auto;
    margin-right: 20px;
}

ul {
    display: flex; 
    gap: 20px;  
    list-style-type: none; 
}  

.user-info {
    padding-top: 20px;
    padding-left: 25px;
    max-width: 70%;
}

.user-section {
    border: 1px solid #E0E0E0;
    padding: 20px;
    background-color: #f9f9f9;
    margin-bottom: 20px;
    border-radius: 6px;
    margin-left: 5px;
    margin-right: 5px;
    border-radius: 6px 6px 0px 0px;
}

.trip-number {
    text-align: center;
    background-color: #FFFFFF;
    border-radius: 15px;
    padding-top: 15px;
    padding-bottom: 15px;
    width: 650px;
    height : 50px;
    margin: 0 auto;
    margin-bottom: 15px;
    justify-content: center;
    align-items: center;
}

.img-header {
    background-image: url('/images/upcoming_trips.svg');
    background-size: cover;
    background-position: center;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #FFFFFF;
    flex-direction: column;
}

p {
   size: 1rem; 
}

.tier-progress {
    width: 100%;
    background-color: #e0e0e0;
    border-radius: 15px;
    overflow: hidden;
    margin-top: 15px;
    height: 25px;
    position: relative;
}

.progress-bar {
    height: 100%;
    background: linear-gradient(180deg, #2969BF 0%, #144E9D 100%);
    width: 0%; 
    transition: width 0.5s ease-in-out; 
}

.tier-line {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: #00000080;
    height: 100%;
}

</style>

@code {
    FirestoreDb db = FirestoreDb.Create("hotelmanagementsystem-3f342");
    private double progressPercentage = 0; //var that'll hold value pulled from database

    protected override async Task OnInitializedAsync() {
        await LoadUserRewardsProgress();
    }

    private async Task LoadUserRewardsProgress() {
        // pull the user's rewards progress from the database
        progressPercentage = 70; // temp value but this is what displays the progress
    }
}